<div class="panel panel-default">
  <!-- heading -->
  <div class="panel-heading">
    <% if post.facebook == true %> <span class="label label-primary"></span> <% end %>
    <% if post.twitter == true %> <span class="label label-primary"></span> <% end %>
    Scheduled on <%= post.scheduled_at %>
  </div>
  <!-- Body -->
  <div class="panel-body">
    <%= post.content %>
  </div>
  <div class="panel-footer">

      <%= post.state.capitalize %>
      <div class="pull-right">
       <%= link_to 'cancel post', cancel_post_path(post), method: :put if post.state == 'scheduled' %>
      </div>

  </div>
</div>
